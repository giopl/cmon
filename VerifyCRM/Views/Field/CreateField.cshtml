@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            $('body').on('click', '.shownextsection', function () {
                $(this).next('section').toggle();

            });



            $('body').on('change', '.typechange', function () {

                var x = $(this).val();
