@model VerifyCRM.Models.app_table

@{
    ViewBag.Title = "Table Details";
}

<h2>Table Details</h2>

<div>
    <h4 class="text-primary">@Model.fulltablename</h4>
    <hr />
    <div class="text-muted ">
        @Html.DisplayFor(model => model.description)
    </div>
    
</div>


<table class="table">
    <thead>
        <tr>
            <th>col name</th>
            <th>col type</th>
            
            <th>nullable</th>
            <th>description</th>                    
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var col in Model.app_column)
        {
            <tr>
                <td>@col.col_name</td>
                <td>@col.col_type @(col.col_length.HasValue?"["+col.col_length+"]":"")</td>
                
                <td>@col.is_nullable</td>
                <td>@col.description</td>

                <td><a href="@Url.Action("EditColumn", new { id=col.id })"> <span class="fa fa-edit"></span></a></td>
            </tr>
            
        }
    </tbody>


</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
